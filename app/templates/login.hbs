<div class="login-form">
    <div>
        <h3>Welcome to Nitrous</h3>
        <p>Please login using either Google or Facebook.</p>
    </div>
    <div>
        <a {{ action 'authenticateWithFacebook' }} class="btn btn-hg btn-primary">
            <i class="fa fa-facebook-square"></i> Facebook
        </a>
        <a {{ action 'authenticateWithGoogle' }} class="btn btn-hg btn-primary">
            <i class="fa fa-google"></i> Google
        </a>
    </div>
    <br>
    <div>
        <form {{action 'authenticate' on='submit'}} >
            <div class="form-group">
                {{input class='form-control login-field' id='identification' placeholder='Enter Login' value=identification}}
                <label class="login-field-icon fui-user" for="identification"></label>
            </div>
            <div class="form-group">
                {{input class='form-control login-field' id='password' placeholder='Enter Password' type='password' value=password}}
                <label class="login-field-icon fui-lock" for="password"></label>
            </div>
            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
        </form>
    </div>
</div>